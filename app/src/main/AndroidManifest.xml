<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aceman.soireegaming">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.aceman.soireegaming.utils.SoireeGamingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeSG">
        <activity android:name="com.aceman.soireegaming.ui.profile.EditProfileActivity"
            android:parentActivityName="com.aceman.soireegaming.ui.profile.ProfileActivity"/>
        <activity android:name="com.aceman.soireegaming.ui.about.AboutActivity" />
        <activity
            android:name="com.aceman.soireegaming.ui.profile.ProfileActivity"
            android:parentActivityName="com.aceman.soireegaming.ui.bottomnavigation.home.MainActivity" />
        <activity android:name="com.aceman.soireegaming.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aceman.soireegaming.ui.bottomnavigation.home.MainActivity" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.CreateEventActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/create_event_tb"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:minHeight="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/edit_profile_menu_tb"
        app:title="Nouvelle Evenement" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/create_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_event_tb">

        <LinearLayout
            android:id="@+id/create_main_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/create_1_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toTopOf="@+id/create_2_cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/create_main_cl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/create_event_profile_pic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        style="@style/TitleFontMainBlackTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Création d'un nouvelle évenement !"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Crée une soirée (ou journée, week-end) gaming, avec vos amis (privée), ou rencontrez de nouveaux joueurs !"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/create_2_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/create_3_cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_1_cv"
                app:cardElevation="2dp"
                android:layout_margin="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TitleFontMainBlackTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:text="Nommez votre event, et décrivez le programme prévu :" />

                    <EditText
                        android:id="@+id/create_event_name_et"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Nom de l'event"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:inputType="text"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />

                    <EditText
                        android:id="@+id/create_event_desc_et"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity=""
                        android:hint="Description du programme"
                        android:maxLength="600"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />

                    <TextView
                        style="@style/TitleFontMainBlackTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:text="Lieu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:src="@drawable/ic_location"
                            android:tint="@color/primaryColor" />

                        <EditText
                            android:id="@+id/create_event_location"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Ville"
                            android:paddingStart="0dp"
                            android:paddingEnd="20dp" />

                    </LinearLayout>
                    <TextView
                    style="@style/TitleFontMainBlackTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="Date et Horaires" />

                    <RelativeLayout
                        android:id="@+id/create_date_1_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_from_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/lightGrey"
                            android:minWidth="60dp"
                            android:padding="5dp"
                            android:text="Début :"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_event_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="120dp"
                            android:padding="5dp"
                            android:hint="choisir la date"
                            android:textColorHint="@color/greyTextColor"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/date_from_tv"/>
                        <TextView
                            android:id="@+id/date_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A partir de :"
                            android:minWidth="90dp"
                            android:background="@color/lightGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:layout_toEndOf="@+id/date_event_picker"/>


                        <TextView
                            android:id="@+id/date_hour_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:padding="5dp"
                            android:hint="choisir l'heure"
                            android:textColorHint="@color/greyTextColor"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/date_hour"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/create_date_2_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_to_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fin :"
                            android:minWidth="60dp"
                            android:background="@color/lightGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"/>

                        <TextView
                            android:id="@+id/date_event_picker_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="120dp"
                            android:padding="5dp"
                            android:hint="choisir la date"
                            android:textColorHint="@color/greyTextColor"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/date_to_tv"/>
                        <TextView
                            android:id="@+id/date_hour_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jusqu'à :"
                            android:minWidth="90dp"
                            android:background="@color/lightGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:layout_toEndOf="@+id/date_event_picker_2"/>


                        <TextView
                            android:id="@+id/date_hour_picker_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:padding="5dp"
                            android:hint="choisir l'heure"
                            android:textColorHint="@color/greyTextColor"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/date_hour_2"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/create_3_cv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/create_2_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/title_type"
                            style="@style/TitleFontMainBlackTxt"
                            android:layout_gravity="start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:padding="10dp"
                            app:layout_constraintBottom_toTopOf="@+id/create_console_lly_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/create_console_lly_1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/create_console_lly_2"
                            app:layout_constraintHorizontal_weight="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title_type"
                            app:cardElevation="2dp"
                            android:layout_margin="1dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Console(s)/ PC :"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"
                                        android:padding="5dp"/>


                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <AutoCompleteTextView
                                    android:id="@+id/create_console_ac"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/darker_gray"
                                    android:background="@color/lightGrey"
                                    android:hint="Recherche"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:completionThreshold="1"
                                    android:imeOptions="actionDone"
                                    />
                                <androidx.core.widget.NestedScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.chip.ChipGroup
                                        android:id="@+id/create_console_chipgroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:chipSpacingHorizontal="10dp"
                                        app:chipSpacingVertical="10dp"
                                        android:layout_below="@+id/entry_chip_txt"/>
                                </androidx.core.widget.NestedScrollView>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/create_console_lly_2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="1dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="0.5"
                            app:layout_constraintStart_toEndOf="@+id/create_console_lly_1"
                            app:layout_constraintTop_toBottomOf="@+id/title_type"
                            app:cardElevation="2dp"
                            android:layout_margin="1dp">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Style de jeu :"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"
                                        android:padding="5dp"/>


                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <AutoCompleteTextView
                                    android:id="@+id/create_style_ac"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/darker_gray"
                                    android:background="@color/lightGrey"
                                    android:hint="Recherche"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:completionThreshold="1"
                                    android:imeOptions="actionDone" />

                                <androidx.core.widget.NestedScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.chip.ChipGroup
                                        android:id="@+id/create_style_chipgroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:chipSpacingHorizontal="10dp"
                                        app:chipSpacingVertical="10dp"
                                        android:layout_below="@+id/entry_chip_txt">


                                    </com.google.android.material.chip.ChipGroup>
                                </androidx.core.widget.NestedScrollView>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/create_4_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_3_cv"
                app:cardElevation="2dp"
                android:layout_margin="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TitleFontMainBlackTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:text="Paramètres " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:text="Les options suivantes permettent de créer des soirées personnalisées. Gardez tout de même en tête que plus on est de fou plus on rit ! " />

                    <RelativeLayout
                        android:id="@+id/create_1_param_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/private_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soirée privée (sur invitation)"
                        android:background="@color/lightGrey"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/private_event_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:minWidth="150dp"
                        android:padding="5dp"
                        android:entries="@array/private_event"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/create_2_param_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gender_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soirée ouverte a(ux) :"
                            android:background="@color/lightGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"/>


                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/gender_event_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="150dp"
                            android:padding="5dp"
                            android:entries="@array/gender_alt"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/create_3_param_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/eat_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nourriture et boissons :"
                            android:background="@color/lightGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"/>


                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/eat_event_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="150dp"
                            android:padding="5dp"
                            android:entries="@array/eat"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/create_4_param_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sleep_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dormir sur place :"
                            android:background="@color/lightGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"/>


                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sleep_event_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="150dp"
                            android:padding="5dp"
                            android:entries="@array/sleep"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
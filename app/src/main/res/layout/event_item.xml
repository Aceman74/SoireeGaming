<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardElevation="1dp"
    app:cardCornerRadius="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/event_main_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/event_main_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="User"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:scaleX="0.5"
                android:scaleY="0.5"/>
        <TextView
            android:id="@+id/event_main_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location"
            android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/event_main_date"
            android:text="TITLE" />

        <TextView
            android:id="@+id/event_main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/event_main_title"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/event_main_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="DESCRIPTION"
            android:layout_weight="0.65"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:fillViewport="true"
        android:layout_margin="5dp">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/misc_event_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MISC"/>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppThemeSG" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorError">@color/errorTextColor</item>
        <item name="android:textColorSecondary">@color/greyTextColor</item>
        <item name="colorControlHighlight">@color/primaryLightColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
    </style>


    <style name="TitleFontMainPrimaryTxt" parent="AppThemeSG">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="TitleFontSecondWhiteTxt" parent="AppThemeSG">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TitleFontMainBlackTxt" parent="AppThemeSG">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleFontSecondBlackTxt" parent="AppThemeSG">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="clickableForegroundBtn" parent="AppThemeSG">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="clickableForegroundTransparent" parent="AppThemeSG">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TitleFontMainPrimaryTxt.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Theme.Holo">
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primaryColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/lightGrey</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="SeekBarSG" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">@color/greyTextColor</item>
        <item name="android:progressTint" tools:targetApi="lollipop">@color/primaryLightColor</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/primaryColor</item>
    </style>

</resources>
